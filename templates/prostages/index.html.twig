{% extends 'base.html.twig' %}

{% block contenu %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h1><center>Liste des stages</center></h1> <HR>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-bordered border-dark border border-2">
				<thead>
					<tr>
						<th>
							Identifiant
						</th>
						<th>
							Titre
						</th>
						<th>
							Nom de l'entreprise
						</th>
						<th>
							ActivitÃ© de l'entreprise
						</th>
						<th>
							Adresse de l'entreprise
						</th>
						<th>
							URL du site de l'entreprise
						</th>
					</tr>
				</thead>
				<tbody>
					{% for stage in stages %}
					<tr>
							<td>
								{{stage.id}}
							</td>
							<td>
								<a href="{{ path('prostages_stage', {idStage:stage.id}) }}">
									{{stage.titre}}
								</a>
							</td>
							<td>
								{{stage.entreprise.nom}}
							</td>
							<td>
								{{stage.entreprise.activite}}
							</td>
							<td>
								{{stage.entreprise.adresse}}
							</td>
							<td>
								{{stage.entreprise.URLsite}}
							</td>
					</tr>
					{% else %}
						<p>Aucun stage disponible.</p>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}

